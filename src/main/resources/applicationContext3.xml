<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--引用标签 ref-->

    <!--告诉容器准备一个 Date 对象-->
    <bean id="date1" class="java.util.Date"></bean>


    <bean id="mouse1" class="com.shl.bean.Mouse">

        <property name="name" value="jerry"></property>

        <!--bean引用外部bean 使用 ref标签-->
        <property name="birthday" ref="date1"></property>

    </bean>

    <bean id="cat1" class="com.shl.bean.Cat">

        <property name="name" value="Tom"></property>
        <!--引用外部bean 使用 ref标签-->
       <!-- <property name="mouse" ref="mouse1"></property>-->

        <!--使用级联的方式 引用内部bean-->
        <property name="mouse" >

            <bean id="mouse2" class="com.shl.bean.Mouse">

                <property name="name" value="Tick"></property>

                <property name="birthday" >
                    <bean id="date2" class="java.util.Date"></bean>
                </property>

            </bean>

        </property>


    </bean>





</beans>
